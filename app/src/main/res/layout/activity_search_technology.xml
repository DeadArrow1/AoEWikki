<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SearchCivilizationActivity">


    <Button
        android:textSize="20sp"
        android:id="@+id/SearchTechByID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getResponseByID"
        android:text="Search by ID"
        app:layout_constraintBottom_toTopOf="@+id/SearchTechByName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.150" />

    <Button
        android:textSize="20sp"
        android:id="@+id/GoBackButton"
        android:layout_width="87dp"
        android:layout_height="51dp"
        android:background="@android:drawable/ic_menu_revert"
        android:onClick="openSearchActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"

        />

    <EditText
        android:textSize="20sp"
        android:id="@+id/TechID"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="write id here"
        android:inputType="number"
        android:textColor="@color/design_default_color_primary_dark"
        android:textColorHint="@color/design_default_color_primary_dark"
        app:layout_constraintBottom_toTopOf="@+id/SearchTechByName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchTechByID"
        app:layout_constraintVertical_bias="0.200" />

    <Button
        android:textSize="20sp"
        android:id="@+id/SearchTechByName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getResponseByName"
        android:text="Search by name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:scaleX="2"
        android:scaleY="2"
        android:text="Search technologies"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:textSize="20sp"
        android:id="@+id/TechName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="write name here"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/design_default_color_primary_dark"
        android:textColorHint="@color/design_default_color_primary_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchTechByName"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/ErrorWindow"
        android:layout_width="133dp"
        android:layout_height="80dp"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintBottom_toTopOf="@+id/SearchTechByName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TechID" />

</androidx.constraintlayout.widget.ConstraintLayout>