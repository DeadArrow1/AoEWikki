<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SearchCivResultActivity">

    <TextView
        android:textSize="16sp"
        android:id="@+id/TextViewCivTeamBonus"
        android:layout_width="360dp"
        android:layout_height="75dp"
        android:layout_marginStart="24dp"
        android:text="Team bonus:"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewCivUniqueTech"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/GoBackButton"
        android:layout_width="87dp"
        android:layout_height="51dp"
        android:background="@android:drawable/ic_menu_revert"

        android:onClick="openSearchCivActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button

        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openMainActivity"
        android:text="Got it"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.972" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/TextViewCivCivilizationBonus"
        android:layout_width="360dp"
        android:layout_height="350dp"
        android:layout_marginStart="24dp"
        android:text="Civilization bonus:"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewCivTeamBonus"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/TextViewCivUniqueTech"
        android:layout_width="360dp"
        android:layout_height="23dp"
        android:layout_marginStart="24dp"
        android:text="Unique tech:"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewCivUniqueUnit"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/TextViewCivUniqueUnit"
        android:layout_width="360dp"
        android:layout_height="21dp"
        android:layout_marginStart="24dp"
        android:text="Special units:"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewCivArmyType"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/TextViewCivArmyType"
        android:layout_width="360dp"
        android:layout_height="19dp"
        android:layout_marginStart="24dp"
        android:text="Army type:"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewCivExpansion"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/TextViewCivExpansion"
        android:layout_width="360dp"
        android:layout_height="19dp"
        android:layout_marginStart="24dp"
        android:capitalize="none"
        android:text="Expansion:"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewCivName"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/TextViewCivName"
        android:layout_width="176dp"
        android:layout_height="61dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:scaleX="4"
        android:scaleY="3"
        android:shadowColor="@color/black"
        android:text="Name"
        android:textColor="@color/purple_500"
        android:textStyle="bold|italic"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>