<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".BrowseActivity">

    <Button
        android:textSize="20sp"
        android:id="@+id/BrowseCivilizationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openBrowseCivilizationsActivity"
        android:text="Civilizations"
        app:layout_constraintBottom_toTopOf="@+id/BrowseUnitsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:textSize="20sp"
        android:id="@+id/BrowseUnitsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:onClick="openBrowseUnitsActivity"
        android:text="Units"
        app:layout_constraintBottom_toTopOf="@+id/BrowseTechnologiesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.786" />

    <Button
        android:textSize="20sp"
        android:id="@+id/BrowseTechnologiesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openBrowseTechnologiesActivity"
        android:text="Technologies"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="184dp"
        android:scaleX="4"
        android:scaleY="4"
        android:text="Browse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/GoBackButton"
        android:layout_width="87dp"
        android:layout_height="51dp"
        android:background="@android:drawable/ic_menu_revert"
        android:onClick="openMainActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />
</androidx.constraintlayout.widget.ConstraintLayout>